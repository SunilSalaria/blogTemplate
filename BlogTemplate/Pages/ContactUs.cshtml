<!--contact form-->
<section id="contact-form">
    <div class="container py-5">
        <div class="row align-items-lg-center">
            <div class="col-xs-12 col-lg-6">
                <h5 class="font-monospace mb-4 text-primary text-center">Contact Us</h5>
                <h2 class="mb-4 mt-0 text-center">
                    Feel Free Contact
                    Us Now
                </h2>
                <form class="row">
                    <div class="col-md-6 mb-4">
                        <input type="text" class="form-control" placeholder="Name">
                    </div>
                    <div class="col-md-6 mb-4">
                        <input type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="col-md-6 mb-4">
                        <input type="text" class="form-control" placeholder="Phone">
                    </div>
                    <div class="col-md-6 mb-4">
                        <input type="text" class="form-control" placeholder="Website">
                    </div>
                    <div class="col-12 mb-4">
                        <textarea class="form-control" placeholder="Type Your Message" rows="7"></textarea>
                    </div>
                    <div class="col-12 mb-lg-4">
                        <div class="text-center">  <button type="submit" class="btn bg-primary py-2 text-capitalize text-white rounded-0 shadow-sm btn-style">Send Message</button></div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 col-xs-12">
                <img src="~/img/appointment-img.jpg" class="img-fluid d-none d-lg-block img-responsive" />
            </div>
        </div>
    </div>
