@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

@*forgot password*@
<section id="reset-id" class="bg-white">
    <div class="container py-3">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-6 d-none d-md-block">
                <img src="~/img/undraw_lost_online_wqob.svg" class="img-fluid p-5"/>
            </div>
            <div class="col-md-5 col-lg-4 offset-md-1 col-xs-12">
                @* reset password form *@
                <form method="post">
                    <h3 class="m-0">@ViewData["Title"]</h3>
                    <p class="text-muted m-0">Enter your email</p>
                    @*<div asp-validation-summary="All" class="text-danger"></div>*@
                    <div class="form-group mb-3 mt-5">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control rounded-0 border-2 border-dark" aria-describedby="emailHelp" placeholder="Example@gmail.com" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="d-grid">
                        <button type="submit" class="btn bg-primary py-2 text-white rounded-0 shadow-sm">Submit</button>
                    </div>
                </form>
                @* /reset password form *@
            </div>
        </div>
    </div>
</section>
@* /forgot password *@
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

